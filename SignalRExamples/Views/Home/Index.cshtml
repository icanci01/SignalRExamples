@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-4">Total Views: </div>
        <div class="col-4">
            <span id="totalViewsCounter"></span>
        </div>
    </div>

    @* <div class="row">
        <div class="col-4">Total Views With Return: </div>
        <div class="col-4">
            <span id="totalViewsReturn"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Total Views With Params: </div>
        <div class="col-4">
            <span id="totalViewsParams"></span>
        </div>
    </div> *@

    <div class="row">
        <div class="col-4">Total Connections/Users: </div>
        <div class="col-4">
            <span id="totalUsersCounter"></span>
        </div>
    </div>

    <br/>

    <div class="row border p-1">
        <h3>Deathly Hallow Race </h3>

        <hr/>

        @* Wand *@
        <div class="row">
            <div>Elder Wand - <span id="wandCounter"></span></div>
        </div>

        @* Sword *@
        <div class="row">
            <div>Gryffindor Sword - <span id="swordCounter"></span></div>
        </div>

        @* Stone *@
        <div class="row">
            <div>Resurrection Stone - <span id="stoneCounter"></span></div>
        </div>

        @* Cloak *@
        <div class="row">
            <div>Invisibility Cloak - <span id="cloakCounter"></span></div>
        </div>

        <hr/>

        @{
            var buttonsData = new (string Id, string Text)[]
            {
                ("btnWand", "Vote Elder Wand"),
                ("btnSword", "Vote Gryffindor Sword"),
                ("btnStone", "Vote Resurrection Stone"),
                ("btnCloak", "Vote Invisibility Cloak")
            };
        }

        <div style="display: flex; justify-content: space-between;">
            @foreach (var (Id, Text) in buttonsData)
            {
                <button id="@Id" class="btn btn-primary">@Text</button>
            }
        </div>
    </div>
</div>

<script src="~/js/signalr.js"></script>
<script src="~/js/usersCount.js"></script>
<script src="~/js/deathlyHallows.js"></script>